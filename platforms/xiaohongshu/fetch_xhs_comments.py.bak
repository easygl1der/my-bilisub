                    const author = {
                        nickname: authorEl?.textContent?.trim() || 'æœªçŸ¥ç”¨æˆ·',
                        avatar: authorEl?.querySelector('img')?.src || ''
                    };

                    // æå–æ—¶é—´
                    let createTime = '';
                    const timeEl = item.querySelector('.comment-time, time, [datetime]');
