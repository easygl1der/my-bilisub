                        let subCommentId = subItem.getAttribute('data-id') ||
                                                     Math.random().toString(36).substr(2, 9);

                        const subContent = subContentEl.textContent.trim();

                        let subLikes = 0;
                        const subLikeEl = subItem.querySelector('.count, .like');
                        if (subLikeEl) {
                            const text = subLikeEl.textContent.trim();
                            const num = parseInt(text.replace(/\\D/g, ''));
                            if (!isNaN(num)) subLikes = num;
                        }

                        const subAuthorEl = subItem.querySelector('.author, .username');
                        const subAuthor = {
                            nickname: subAuthorEl?.textContent?.trim() || 'æœªçŸ¥ç”¨æˆ·',
                            avatar: subAuthorEl?.querySelector('img')?.src || ''
                        };

                        let subCreateTime = '';
                        const subTimeEl = subItem.querySelector('.comment-time, time, [datetime]');
                        if (subTimeEl) {
                            subCreateTime = subTimeEl.textContent.trim() || subTimeEl.getAttribute('datetime') || '';
                        }

                        replies.push({
                            id: subCommentId,
                            parent_id: commentId,
                            depth: 1,
                            content: subContent,
                            like_count: subLikes,
                            author: subAuthor,
                            create_time: subCreateTime,
                            is_reply: true
                        });
                    }

                    // æ·»åŠ é¡¶çº§è¯„è®º
                    comments.push({
                        id: commentId,
                        parent_id: null,
                        depth: 0,
                        content: content,
                        like_count: likes,
                        author: author,
                        create_time: createTime,
                        is_reply: false
                    });
                }

                return comments;
            }
        ''')

        if not comments_data:
            print("  âš ï¸  æœªæ‰¾åˆ°è¯„è®ºæ•°æ®")
        else:
            print(f"  âœ… æå–åˆ° {len(comments_data)} æ¡è¯„è®º")

