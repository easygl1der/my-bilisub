                    }

                    // æŸ¥æ‰¾å­è¯„è®º
                    const subCommentItems = item.querySelectorAll('.comment-item-sub');
                    const replies = [];
                    for (const subItem of subCommentItems) {
                        const subContentEl = subItem.querySelector('.content');
